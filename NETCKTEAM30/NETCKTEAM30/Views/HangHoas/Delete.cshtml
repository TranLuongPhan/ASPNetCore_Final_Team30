@model NETCKTEAM30.Models.HangHoa

@{
    ViewData["Title"] = "Delete";
}

<meta name="viewport" content="width=device-width" />
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - NETCKTEAM30</title>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="~/css/mycss.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>


<body>


    
        <a class="btn btn-danger" asp-action="index" asp-controller="NhaCungCaps">Nhà Cung cấp</a>
        <a class="btn btn-primary" asp-action="index" asp-controller="HangHoas">Hàng Hóa</a>
        <a class="btn btn-success" asp-action="index" asp-controller="Loais">Loai</a>
        <a class="btn btn-info" asp-action="index" asp-controller="NguoiDungs">Người Dùng</a>
        <a class="btn btn-warning" asp-action="index" asp-controller="HoaDons">Đơn Hàng Trong Ngày</a>
        <button type="button" class="btn btn-danger" asp-action="index" asp-controller="HoaDons">Doanh Số</button>



    
    <div>
        <h4>Xóa Hàng hóa này ?</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Tên Hàng Hóa
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenHh)
            </dd>
            <dt>
                Loại
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Loai.TenLoai)
            </dd>
            <dt>
                Đơn Giá
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DonGia)
            </dd>
            <dt>
               Hình
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Hinh)
            </dd>
            <dt>
                Nhà Cung Cấp
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NhaCungCap.TenNhaCc)
            </dd>
            <dt>
               Ngày Nhập
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NgayNhap)
            </dd>
            <dt>
                Mô Tả
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MoTa)
            </dd>
            <dt>
                Giảm Giá
            </dt>
            <dd>
                @Html.DisplayFor(model => model.GiamGia)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="HanghoaID" />
            <input type="submit" value="Xóa" class="btn btn-default btn btn-primary" /> 
            <br />
            <br />
            <a asp-action="Index"class="btn btn-primary">Trở Về</a>
        </form>
    </div>
</body>