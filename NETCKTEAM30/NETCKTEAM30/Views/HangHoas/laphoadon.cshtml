@model ThanhToanViewModel
@{
    ViewData["Title"] = "laphoadon";
}
<title>@ViewData["Title"] - NETCKTEAM30</title>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<link href="~/css/mycss.css" rel="stylesheet" />
<div class="container">


    <div class="row" style="height:200px;">
        <div class="col-sm-3" style="height:200px;">
            <div style="height: 60%;width:10px; background-color:black;float:right;margin:20px;"></div>
            <span style="float: right;font-size: 51px;color: #d61816;font-weight: 700;">TEAM30</span>
        </div>
        <div class="col-sm-3" style="height:200px;">
            <h1 style="color: #ff6c00;">THANH TOÁN</h1>
        </div>
        <div class="col-sm-3" style="height:200px;">

        </div>
        <div class="col-sm-3" style="height:200px;">

        </div>
    </div>
    <div class="row" style="height: 146px;">
        <div class="col-sm-2">

        </div>
        <div class="col-sm-8" style="background-color: #e2efc9;border-radius: 10px; padding:10px;">
            <h1>Địa Chỉ Nhận Hàng</h1>
            <br />
            <span style="font-weight:800; font-size:16px;">@Model.thongtinKH.TENKH,ĐT:@Model.thongtinKH.SDT</span>,ĐC: @Model.thongtinKH.DCNHAN, Mặc Định <a asp-action="thaydoithongtindcnhan" asp-controller="NguoiDungs">THAY ĐỔI</a>
        </div>
        <div class="col-sm-2">

        </div>

    </div>


    <div class="row">
        <div class="col-sm-2">

        </div>
        <div class="col-sm-8 " style="background-color:#e4fb0e96;padding:10px;">
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            Tên Món Ăn
                        </th>
                        <th>
                            Đơn Giá
                        </th>
                        <th>
                            Số Lượng
                        </th>
                        <th>
                            Giảm Giá
                        </th>
                        <th>
                            Thành tiền
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Cthd)
                    {
                        <tr>
                            <td>
                                @item.HangHoa.TenHh
                            </td>
                            <td>
                                @item.DonGia .000 đ
                            </td>
                            <td>
                                @item.SoLuong
                            </td>
                            <td>
                                @item.GiamGia
                            </td>
                            <td>
                                @item.ThanhTien
                            </td>



                        </tr>
                    }
                </tbody>
            </table>
            <span style="float:right; margin-right:10px;">Tổng cộng:@ViewBag.TongTien .000đ</span>
            <form asp-action="hoattatdonhang" asp-controller="NguoiDungs" method="post">
                <input type="hidden" value="@Model.thongtinKH.HTTHANHTOAN" name="httt" />
                <input type="hidden" value="@Model.thongtinKH.HTVANCHUYEN" name="htvc" />
                <div class="form-group">
                    <span style="font-weight: 700;font-size: 19px;">Hình Thức Thanh Toán:</span>
                    @Model.thongtinKH.HTTHANHTOAN
                    <br />

                    <span style="font-weight: 700;font-size: 19px;">Hình Thức Vận Chuyển:</span>
                    @Model.thongtinKH.HTVANCHUYEN
                </div>
                <button type="submit" class="btn btn-danger" style="width:30%;float:right;">Hoàn Tất Đơn Hàng</button>


            </form>
        </div>
        <div class="col-sm-2">

        </div>
    </div>


   

</div>