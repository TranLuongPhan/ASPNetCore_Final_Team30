@model NETCKTEAM30.Models.Loai

@{
    ViewData["Title"] = "Create";
}

<meta name="viewport" content="width=device-width" />
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - NETCKTEAM30</title>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="~/css/mycss.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>


<body>


    <div class="container">
        <a class="btn btn-danger" asp-action="index" asp-controller="NhaCungCaps">Nhà Cung cấp</a>
        <a class="btn btn-primary" asp-action="index" asp-controller="HangHoas">Hàng Hóa</a>
        <a class="btn btn-success" asp-action="index" asp-controller="Loais">Loai</a>
        <a class="btn btn-info" asp-action="index" asp-controller="NguoiDungs">Người Dùng</a>
        <a class="btn btn-warning" asp-action="index" asp-controller="HoaDons">Đơn Hàng Trong Ngày</a>
        <button type="button" class="btn btn-danger" asp-action="index" asp-controller="HoaDons">Doanh Số</button>



    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    Tên Loại
                    <input asp-for="TenLoai" class="form-control" />
                    <span asp-validation-for="TenLoai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Thêm" class="btn btn-default btn btn-success"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index"class="btn btn-success">Trở Về</a>
    </div>
</body>
