@model NETCKTEAM30.Models.NhaCungCap

@{
    ViewData["Title"] = "Delete";
}

<meta name="viewport" content="width=device-width" />
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - NETCKTEAM30</title>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="~/css/mycss.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>


<body>


    
        <a class="btn btn-danger" asp-action="index" asp-controller="NhaCungCaps">Nhà Cung cấp</a>
        <a class="btn btn-primary" asp-action="index" asp-controller="HangHoas">Hàng Hóa</a>
        <a class="btn btn-success" asp-action="index" asp-controller="Loais">Loai</a>
        <a class="btn btn-info" asp-action="index" asp-controller="NguoiDungs">Người Dùng</a>
        <a class="btn btn-warning" asp-action="index" asp-controller="HoaDons">Đơn Hàng Trong Ngày</a>
        <button type="button" class="btn btn-danger" asp-action="index" asp-controller="HoaDons">Doanh Số</button>



   
    <div>
        <h4> Xóa Nhà Cung Cấp Này ?</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên Nhà Cung Cấp
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenNhaCc)
            </dd>
            <dt>
               Địa Chỉ
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>
            <dt>
                SĐT
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SDT)
            </dd>
            <dt>
               Email
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                Mô Tả
            <dd>
                @Html.DisplayFor(model => model.MoTa)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="NhaCungCapID" />
            <input type="submit" value="Delete" class="btn btn-default btn btn-danger" /> 
            <br />
            <br />
            <a asp-action="Index"class="btn btn-danger">Trở Về</a>
        </form>
    </div>
</body>